<h1> List index </h1>

<ul>
    <% @lists.each do |list| %>
        <li>
            <strong><%= list.title %></strong>: <%= list.description %>
            <%= link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>

    <% end %>
</ul>
<%= link_to 'New List', new_list_path %>
